    <script>
        {{!--
        // JS is here because it MUST be present before the HTML rendered
        --}}
        
        window.zImgLoaded = function(img) {
            img.classList.add("imgloaded");
        };
        
        window.zImgLoadedSwitchToBgImg = function(img) {
            {{!--
            // currentSrc is supplied when srcset is supported in
            // the browser. If it doesn't exist, the <img> is using
            // it's real src value because that browser doesn't
            // support srcset
            --}}
            var src = img.currentSrc ? img.currentSrc : img.src;
            
            var p = img.previousElementSibling;
            p.style.backgroundImage = 'url("' + src + '")';
            p.classList.add("imgloaded");
        }
    </script>
    
