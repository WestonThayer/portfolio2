<div class="row">
    <article class="col-xs-12 col-xl-offset-2 col-xl-8">
        <a class="tile writing-tile" href="{{href}}" {{#if isLinkExternal}}target="_blank"{{/if}}>
            <div class="tile__bg writing-tile__bg"></div>
            <div class="writing-tile__fg">
                <h1 class="writing-tile__title">{{title}}</h1>
                <p class="writing-tile__date">{{date}}</p>
                
                <div class="writing-tile__snippet post__markdown-section{{#if previewImgSrc}} writing-tile__snippet--condensed{{/if}}">
                    {{mdToSnippetHtml snippet}}
                </div>
                
                {{#if previewImgSrc}}
                    <img class="writing-tile__preview-img" src="{{previewImgSrc}}">
                {{/if}}
            </div>
        </a>
    </article>
</div>
